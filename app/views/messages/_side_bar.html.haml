.Side_bar
  .LeftHeader
    .Top-items
      .Top-items__name
        = current_user.name
      .Top-items__icons
        = link_to new_group_path(current_user), class: "Top-items__btn edit-btn" do
          = icon('fas', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: "Top-items__btn cog-btn" do
          = icon('fas', 'cog')
          %span<>

  .Groups
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message